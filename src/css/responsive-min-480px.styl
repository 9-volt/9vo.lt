// Responsive up to 480px
/////////////////////////

@media (max-width: 480px)
  .header
    height auto
    .logo
      margin 0
      padding 30px 0 30px
      float none
      text-align center
      img
        height 37px
        width auto
    nav
      text-transform uppercase
      ul
        float none
        display block
        margin 0
        padding 0
        list-style none
        white-space normal
        font-size 1.1em
        li
          display block
          padding 1em 1em
          border-top 1px solid $green
          a
            text-decoration none
