// System imports
@import "nib"

@import "normalize"

$white = #fff
$green = #3bbdb5
$red = #ef4a48
$blueDark = #15123f
$black = #000

body {
  font-family: "Monosten E", Courier, monospace;
  font-size-adjust: 0.5;
  font-weight: 200;
  font-style: normal;
  background $white
  color $black
}

h1, h2, h3, h4, h5, h6, b, strong {
  font-family:"Monosten C", Courier, monospace;
  font-size-adjust:0.5;
  font-weight:bold;
  font-style:normal;
}

