// System imports
@import "nib"

@import "normalize"

$white = #fff
$yellow = #fffdf2
$green = #3bbdb5
$red = #ef4a48
$blueDark = #15123f
$black = #000

@import "utilities"

body
  font-family: "Monosten E", Courier, monospace;
  font-size-adjust: 0.5;
  font-weight: 200;
  font-style: normal;
  background $white
  color $black
  font-size 1em


h1, h2, h3, h4, h5, h6, b, strong
  font-family:"Monosten C", Courier, monospace;
  font-size-adjust:0.5;
  font-weight:bold;
  font-style:normal;

a
  color $green

@import "responsive-1200px-max" // implicit style
@import "responsive-992px-1199px"
@import "responsive-768px-991px"
@import "responsive-min-767px"
@import "responsive-min-480px"
